<!-- views/experiment.html -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Experiment Task</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <div class="container">
    <h1>Experiment Task {{ taskNumber }}</h1>
    <p>Style: {{ style }}</p>
    <p>Sentence: {{ sentence }}</p>
    
    <!-- Display time taken for the task -->
    {% if startTime %}
      <p>Time taken: {{ timeTaken / 1000 }} seconds</p>
    {% endif %}

    <form action="/experiment/submit/{{ taskNumber }}" method="post">
      <input type="hidden" name="participantId" value="{{ participantId }}">

      <!-- Your task input fields go here -->

      <button type="submit">Submit</button>
    </form>
  </div>
</body>
</html>
